pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building application...'
                echo 'Tool: Maven (Build and dependency management)'
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                echo 'Running unit and integration tests...'
                echo 'Tool: JUnit (Unit and integration testing)'
            }
        }
        stage('Code Analysis') {
            steps {
                echo 'Running static code analysis...'
                echo 'Tool: SonarQube (Static code analysis)'
            }
        }
        stage('Security Scan') {
            steps {
                echo 'Scanning for vulnerabilities...'
                echo 'Tool: OWASP Dependency-Check (Security scanning)'
                echo 'No vulnerabilities found.'
            }
        }
        stage('Deploying to Staging') {
            steps {
                echo 'Deploying to staging environment...'
                echo 'Tool: Ansible (Staging deployment)'
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                echo 'Running integration tests on staging...'
                echo 'Tool: Selenium (Staging integration testing)'
            }
        }
        stage('Deploy to Production') {
            steps {
                echo 'Deploying to production environment...'
                echo 'Tool: AWS CLI (Production deployment)'
            }
        }
    }
}




